<div>
  <div>
    <h1>
      Welcome to Brush Findr
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Looking for brushes?
    </h2>

    <form action="/insert_artstyle" method="post">
      <div>
        <label for="artstyle_box">
          What artstyle are you creating?
        </label>

        <select id="artstyles_box" name="artstyles">
          <% @list_of_artstyles.each do |an_artstyle| %>
            <option value="<%= an_artstyle.id %>"><%= an_artstyle.name %></option>
          <% end %>
          </select>
      </div>

      <div>
        <label for="program_box">
          What Program are you using?
        </label>

        <select id="programs_box" name="programs">
          <% @list_of_programs.each do |a_program| %>
            <option value="<%= a_program.id %>"><%= a_program.name %></option>
          <% end %>
          </select>
      </div>

      <button>
        Generate Brushes
      </button>
    </form>
  </div>
</div>
